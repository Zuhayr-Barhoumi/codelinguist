<style>
  footer {
    padding: 2em 1em 6em 1em;
    background: var(--color-tertiary);
    color: var(--color-grey);
    text-align: center;
  }
  .social-links {
    display: flex;
    justify-content: center;
    gap: 1em;
    margin-top: 1em;
  }
  .social-links a {
    text-decoration: none;
    color: var(--color-grey);
  }
  .social-links a:hover {
    color: var(--color-darkest);
  }
</style>
